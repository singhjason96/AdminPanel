<h1>Login</h1>
<% if @error %>
<p><%=@error%></p>
<% end %>
<div class="login-form">
<%= form_tag "/sessions", method: :post do %>
    <%= label_tag "Email" %><br>
    <%= text_field_tag :email, nil, class: "", required: true %><br>
    <%= label_tag "Password" %><br>
    <%= password_field_tag :password, nil, required: true %><br>
    <%= submit_tag "Log In" %>
    <% end %>
    </div>
